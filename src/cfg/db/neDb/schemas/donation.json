{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "time": {
            "type": "string"
        },
        "amount": {
            "type": "number"
        },
        "description": {
            "type": "string"
        },
        "toBid": {
            "type": "boolean"
        },
        "toBidArray": {
            "type": "array",
            "default": [],
            "items": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "bidId": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "bids": {
            "type": "array",
            "default": [],
            "items": {
                "name": {
                    "type": "string"
                },
                "current": {
                    "type": "number"
                }
            }
        }
    },
    "required": [
        "_id",
        "name",
        "email",
        "time",
        "amount",
        "toBid",
        "bid",
        "bids"
    ]
}