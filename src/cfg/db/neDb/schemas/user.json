{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "teamId": {
            "type": "string",
            "default": null
        },
        "social": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "twitch": {
                    "type": "number"
                }
            }
        }
    },
    "required": [
        "_id",
        "name",
        "teamId",
        "social"
    ]
}